generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model College {
  id              String      @id @default(uuid())
  name            String      @unique
  bongs           Int         @default(0)
  coverImage      String?
  location        String?
  officialWebsite String?
  images          Json?
  totalStudents   Int?
  maleStudents    Int?
  femaleStudents  Int?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  nirf            Int?
  moderated       Boolean     @default(false)
  orcrs           Orcr[]
  reviews         Review[]
  placements      placement[]
}

enum OrcrType {
  JOSSA
  CSAB
  BITSAT
  OTHER
}

enum Exam {
  MAINS
  ADVANCED
  BITSAT
}

model Orcr {
  id                  String   @id @default(uuid())
  year                Int
  round               Int
  type                OrcrType
  exam                Exam
  collegeId           String
  college             College  @relation(fields: [collegeId], references: [id])
  institute           String
  academicProgramName String
  quota               String
  seatType            String
  gender              String
  openRank            Int
  closeRank           Int
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Review {
  id        String   @id @default(uuid())
  collegeId String
  college   College  @relation(fields: [collegeId], references: [id])
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model placement {
  id              String   @id @default(uuid())
  year            Int
  collegeId       String
  college         College  @relation(fields: [collegeId], references: [id])
  totalGrads      Int
  placed          Int
  median          Int
  higherEducation Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
